{% extends 'base.html.twig' %}

{% block title %}BlogES{% endblock %}

{% block body %}

<div>
    <div class="d-flex justify-content-center align-items-center full-height ">
        <div class="card w-50">
            
            <div class="card-header">
            INGRESAE    
            </div>
                
            <div class="card-body row">
               
               <div class="col-6"> 
                <img src="{{ asset('images/tomato.jpg') }}" class="img-fluid"/>
               </div>     
               
               <div class="col-6">     
                    <form method="post"  {#class="d-flex flex-column align-items-center"#}accept-charset="UTF-8">
                        <input type="hidden" name="action" value="users/login">
                    
                        <h3><label for="loginName">Usuario</label></h3>
                        <input id="loginName" class="form-control mb-3" type="text" name="loginName"
                            value="">
                    
